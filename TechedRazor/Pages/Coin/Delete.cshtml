@page "/Coin/Delete/{id}"
@model TechedRazor.Pages.Coin.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-center py-2">Izbriši - @Model.CoinDTO.Name</h2>
<h4 class="text-center text-danger">Jeste li sigurni da želite izbrisati spremljenu vrijednost?</h4>
<div class="container">
    <hr class="mb-5" />
    <div class="row">
        <div class="col-lg-6 col-md-10 mx-auto">
            <div class="card">
                <div class="text-center">
                    <img src="@Url.Content(Model.CoinDTO.ImageURL)" class="img-fluid rounded-3" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Model.CoinDTO.Name</h5>
                    </div>
                    <div class="container">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                Oznaka - <b>@Model.CoinDTO.Symbol</b>
                            </li>
                            <li class="list-group-item">Trenutačna cijena - $ @Model.CoinDTO.CurrentPrice</li>
                            <li class="list-group-item">Promjena cijene u 24h- @Model.CoinDTO.PriceChangePercentage24h%</li>
                            <li class="list-group-item">Tržišni rang - @Model.CoinDTO.MarketCapRank</li>
                            <li class="list-group-item">Circulating Supply - @Model.CoinDTO.CirculatingSupply </li>
                            <li class="list-group-item">Total Supply - @Model.CoinDTO.TotalSupply </li>
                            <li class="list-group-item">Max Supply - @Model.CoinDTO.MaxSupply</li>
                            <li class="list-group-item">Zadnje ažurirano - @Model.CoinDTO.LastUpdated</li>
                            <li class="list-group-item">Spremljeno - @Model.CoinDTO.ChangedAt</li>
                        </ul>
                    </div>
                </div>
                <div class="card-body text-center">
                    <form method="post">
                        <input type="submit" value="Izbriši" class="btn btn-danger" />
                    </form>
                </div>
            </div>
            <div class="text-center">
                <a class="btn btn-outline-primary mt-3" asp-page="./Index">Lista vrijednosti iz baze</a>
            </div>
        </div>
    </div>
</div>
