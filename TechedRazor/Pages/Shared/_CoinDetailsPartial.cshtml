@model TechedRazor.Models.ViewModel.CoinDTO
@{
}
<div class="modal fade" id="coinDetailsModal">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="card-title">@Model.Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <div class="row g-3">
                        <div class="col-md-5 align-self-center ">
                            <img src="@Url.Content(Model.ImageURL)" class="img-fluid rounded-3 justify-content-center" alt="...">
                        </div>
                        <div class="col-md-6">
                            <div class="container">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        Oznaka - <b>@Model.Symbol</b>
                                    </li>
                                    <li class="list-group-item">CurrentPrice - @Model.CurrentPrice</li>
                                    <li class="list-group-item">PriceChangePercentage24h - @Model.PriceChangePercentage24h</li>
                                    <li class="list-group-item">MarketCapRank - @Model.MarketCapRank</li>
                                    <li class="list-group-item">CirculatingSupply - @Model.CirculatingSupply</li>
                                    <li class="list-group-item">Total Supply - @Model.TotalSupply</li>
                                    <li class="list-group-item">Max supply - @Model.MaxSupply</li>
                                    <li class="list-group-item">Last updated - @Model.LastUpdated</li>
                                    <li class="list-group-item">Changed At - @Model.ChangedAt</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-md-1">
                    <div class="text-center my-3">
                        <button class="btn btn-sm btn-danger" data-bs-dismiss="modal">Zatvori</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>